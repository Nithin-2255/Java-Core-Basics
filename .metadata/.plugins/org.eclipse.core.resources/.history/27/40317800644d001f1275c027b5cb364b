package star;

import java.util.Scanner;

public class starPattern 
	{
	public static void main(String[] args) 
	{
		star(4);
	 }
	
	
	 static void star(int n)
	{
		for (int row=1;row<=n;row++)
		{
			for(int col=1;col<=row;col++)
			{
				System.out.print( col );
			}
			System.out.println();
		}
	}
	}
